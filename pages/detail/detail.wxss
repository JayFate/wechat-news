.container {
  padding: 32rpx;
  background: #fff;
}

.article {
  width: 100%;
}

.header {
  margin-bottom: 40rpx;
}

.title {
  font-size: 40rpx;
  font-weight: bold;
  line-height: 1.4;
  color: #333;
  margin-bottom: 20rpx;
}

.meta {
  font-size: 24rpx;
  color: #999;
}

.meta text {
  margin-right: 20rpx;
}

.content {
  font-size: 30rpx;
  line-height: 1.8;
  color: #333;
}

.content rich-text {
  width: 100%;
}